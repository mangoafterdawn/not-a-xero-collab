<Mods LoadCommand = "%xero(function(self)
	-- judgment / combo proxies
	for pn = 1, 2 do
		setupJudgeProxy(PJ[pn], P[pn]:GetChild('Judgment'), pn)
		setupJudgeProxy(PC[pn], P[pn]:GetChild('Combo'), pn)
	end
	-- player proxies
	for pn = 1, #PP do
		PP[pn]:SetTarget(P[pn])
		P[pn]:hidden(1)
	end
	-- your code goes here here:
	setdefault {
		2, 'xmod'
	}


	aftsprite1:SetTexture(aft1:GetTexture())
	aftsprite1:zoomx(1)
	aftsprite1:zoomy(1)
	aftsprite1:diffusealpha(1)
	aftsprite1:hidden(1)

	exclusionsprite:GetShader():uniformTexture('sampler1', overlay:GetTexture())
	exclusionsprite:SetTexture(exclusionaft:GetTexture())
	overlay:hidden(1)

	for i = 1, #spritepool do
		sprite(spritepool[i])
		spritepool[i]:hidden(1)
		spritepool[i]:SetTexture(aft1:GetTexture())
	end

end)"

